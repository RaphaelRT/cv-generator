<div class="container">
  <header class="header">
    <h1 class="name">{{name}}</h1>
    <h2 class="title">{{title}}</h2>
    <div class="contact">
      <a href="tel:{{contact.phone}}">Phone: {{contact.phone}}</a>
      <a href="mailto:{{contact.email}}">Email: {{contact.email}}</a>
      <a href="{{contact.portfolio}}" target="_blank">Portfolio</a>
      <a href="https://github.com/{{contact.github}}" target="_blank">GitHub</a>
      <a href="https://linkedin.com/in/{{contact.linkedin}}" target="_blank">LinkedIn</a>
    </div>
  </header>

  <section class="skills section">
    <h3 class="section-title">Skills</h3>
    {{#each skills}}
      <div class="list-item">
        <span>{{@key}}:</span> {{this.join(', ')}}
      </div>
    {{/each}}
  </section>

  <section class="experience section">
    <h3 class="section-title">Experience</h3>
    {{#each experience}}
      <div class="list-item">
        <div class="job-title">{{title}}</div>
        <div class="company">{{company}} - {{location}}</div>
        <div class="date">{{startDate}} - {{endDate}}</div>
        <ul>
          {{#each description}}
            <li>{{this}}</li>
          {{/each}}
        </ul>
      </div>
    {{/each}}
  </section>

  <section class="education section">
    <h3 class="section-title">Education</h3>
    {{#each education}}
      <div class="list-item">
        <div class="degree">{{degree}}</div>
        <div class="institution">{{institution}}</div>
        <div class="date">{{startDate}} - {{endDate}}</div>
      </div>
    {{/each}}
  </section>

  <section class="languages section">
    <h3 class="section-title">Languages</h3>
    <ul>
      {{#each languages}}
        <li>{{language}} - {{level}}</li>
      {{/each}}
    </ul>
  </section>
</div>
