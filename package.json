{
  "name": "cv-generator",
  "version": "1.0.0",
  "description": "Generate ATS-compatible CVs in PDF and HTML from JSON",
  "main": "dist/server.js",
  "scripts": {
    "watch:scss": "sass --watch src/assets/styles/index.scss:src/assets/styles/main.css",
    "local": "ts-node src/index.ts",
    "local:watch": "npm-run-all --parallel watch:scss local"
  },
  "dependencies": {
    "express": "^4.21.2",
    "handlebars": "^4.7.8",
    "hbs": "^4.2.0",
    "puppeteer": "^24.1.0",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@types/express": "^5.0.0",
    "@types/hbs": "^4.0.4",
    "@types/node": "^22.10.7",
    "@types/ws": "^8.5.13",
    "npm-run-all": "^4.1.5",
    "rimraf": "^6.0.1",
    "sass": "^1.83.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.3"
  }
}
